{
    "info": {
        "name": "Presentra API",
        "description": "API documentation for the Presentra attendance management system.\n\nAll authenticated endpoints require a Firebase ID Token in the Authorization header:\n`Authorization: Bearer <firebase_id_token>`",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "<firebase_id_token>",
            "type": "string"
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Sync Device (FCM Token)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fcmToken\": \"your_fcm_device_token_here\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/sync-device",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "sync-device"
                            ]
                        },
                        "description": "Syncs the user's device FCM token for push notifications. Requires authentication."
                    }
                }
            ]
        },
        {
            "name": "User",
            "item": [
                {
                    "name": "Get My Profile",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/users/me",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "users",
                                "me"
                            ]
                        },
                        "description": "Returns the profile of the currently authenticated user."
                    }
                }
            ]
        },
